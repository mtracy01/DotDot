<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="dotdotdot.dotdot.GameActivity">

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/textureView1"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/viewAnimator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextureView
        android:layout_width="wrap_content"
    android:layout_height="2dp"
    android:id="@+id/textureView2"
        android:layout_marginTop="112dp"
        android:layout_below="@+id/textureView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/textureView3"
        android:layout_above="@+id/textureView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="112dp" />

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/textureView4"
        android:layout_above="@+id/textureView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="111dp" />

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/textureView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ViewAnimator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewAnimator"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2238dp"
        android:layout_marginStart="333dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextureView
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:id="@+id/textureView6"
        android:layout_above="@+id/textureView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="93dp"
        android:layout_marginStart="93dp" />

    <TextureView
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:id="@+id/textureView7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextureView
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:id="@+id/textureView8"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textureView7"
       
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp" />

</RelativeLayout>
